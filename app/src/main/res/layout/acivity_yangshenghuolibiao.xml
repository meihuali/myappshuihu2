<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/yangsghenghuliebiao_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="@color/white"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/wodeqianbaos"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="@string/zanwuyangshenghulianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_onclick"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shuihuliebiao_t"
            android:layout_marginTop="24dp"
            android:layout_width="183dp"
            android:layout_height="203dp" />

        <com.youth.banner.Banner
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="205dp">
        </com.youth.banner.Banner>
        <ImageView
            android:id="@+id/img_addKetrt"
            android:src="@drawable/tianjiajian_t"
            android:layout_marginTop="65dp"
            android:layout_width="62dp"
            android:layout_height="62dp" />
        <TextView
            android:layout_marginTop="13dp"
            android:textColor="@color/white"
            android:text="@string/tianjianyangshenghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="59dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0.03dp"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_marginTop="8dp"
            android:src="@drawable/chahao_t"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    

</FrameLayout>