<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise4"
    android:orientation="vertical" >
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhuijiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/fenhongse"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/tianjiashebei"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/huise5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:background="@drawable/yuanjiaofenhongse_t">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405dp">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <GridView
                    android:id="@+id/gridview_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:numColumns="1" >
                </GridView>

                <com.example.xiao.myappshuihu.view.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/notivetxt"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/wifiicon_t"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wifi_name_ids"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:text="huali"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.example.xiao.myappshuihu.utils.EditTextWithDelete
                android:layout_marginTop="20dp"
                android:id="@+id/wifi_pass_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/huise"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/huiseyuanjiaokuang_t"
                android:ems="10"
                android:hint="                   *************"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/edit_pwd"
                android:textSize="18sp" />
            </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notivetxtss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="25dp"
                android:text="@string/add_hint"
                android:textColor="@color/line3"
                android:textSize="16dp" />
            <Button
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/wifi_conn_bt"
                android:textColor="@color/white"
                android:text="@string/sousuo"
                android:background="@drawable/jianbian_t"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>










    <ScrollView
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablayout"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/notivetxts"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="@string/add_hint"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/add_one_device"
                    android:visibility="gone"
                    android:textColor="@color/black" />

                <GridView
                    android:id="@+id/gridview_ids"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:numColumns="1" >
                </GridView>

                <com.example.xiao.myappshuihu.view.SearchView
                    android:id="@+id/searchViewss"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center" />
                <!--
                 <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
                -->
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/add_layout_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/list_item_bg"
                android:padding="10dp" >

                <TextView
                    android:visibility="gone"
                    android:id="@+id/wifi1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/wifi_account"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/wifi_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/wifi1_txt"
                    android:paddingLeft="20dp"
                    android:text="songjiuhua"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <RelativeLayout
                android:id="@+id/add_layout1_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_bg"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/wifi_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/wifi_password"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/wifi_pass_ids"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/wifi_txt"
                    android:background="@null"
                    android:hint="@string/wifi_password_hint"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <Button
                android:id="@+id/wifi_conn_btt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/adddev"
                android:padding="10dp"
                android:text="@string/search"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>