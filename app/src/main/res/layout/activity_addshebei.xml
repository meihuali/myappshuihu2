<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/huise4"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_back"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhuijiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/fenhongse"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/tianjiashebei"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@color/huise5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:background="@drawable/yuanjiaofenhongse_t">

        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </com.youth.banner.Banner>

        <Button
            android:id="@+id/jump_to_new"
            android:textColor="@color/white"
            android:text="@string/not_found_old"
            android:background="@drawable/jianbian_t"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="185dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>




    <RelativeLayout
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <GridView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gidview"
            android:paddingTop="10dp"
            android:numColumns="3"
            >

        </GridView>

    </RelativeLayout>

    <Button
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jump_to_news"
        android:text="@string/not_found_old"
        android:layout_alignParentBottom="true"
        android:background="@drawable/user_blue_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"/>

</LinearLayout>
