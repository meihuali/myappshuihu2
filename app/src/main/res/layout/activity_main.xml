<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.xiao.myappshuihu.MainActivity">

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_llayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/daohangtiao_t"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <!--第1个tab-->
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/llay_00"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/shouye_xuanzhong"
                android:id="@+id/id_img00"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <TextView
                android:textColor="@color/but_color1"
                android:textSize="13sp"
                android:gravity="center"
                android:text="@string/shouye"
                android:id="@+id/tv_00"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                />
        </LinearLayout>
        <!--第4个tab-->
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/llay_03"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <ImageView

                android:layout_marginTop="10dp"
                android:src="@drawable/faxian_weixuanzhong"
                android:id="@+id/id_img03"
                android:layout_width="20dp"
                android:layout_height="20dp"

                />
            <TextView
                android:textColor="@color/txt_balck"
                android:textSize="13sp"
                android:gravity="center"
                android:text="@string/faxian"
                android:id="@+id/tv_03"
                android:layout_width="wrap_content"
                android:layout_height="17dp"

                />
        </LinearLayout>


        <!--第2个tab-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/llay_01"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/shangcheng_weixuanzhong"
                android:id="@+id/id_img01"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <TextView
                android:textColor="@color/txt_balck"
                android:textSize="13sp"
                android:gravity="center"
                android:text="@string/shangcheng"
                android:id="@+id/tv_01"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_dianji"
            android:src="@drawable/daohang_t"
            android:layout_width="60dp"
            android:layout_height="40dp" />

        <!--第3个tab-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/llay_02"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/wodeweixuanzhong"
                android:id="@+id/id_img02"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />
            <TextView
                android:textColor="@color/txt_balck"
                android:textSize="13sp"
                android:gravity="center"
                android:text="@string/wode"
                android:id="@+id/tv_02"
                android:layout_width="match_parent"
                android:layout_height="17dp"


                />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
