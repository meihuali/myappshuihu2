<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/llay_tatile"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:background="@drawable/store"
            android:id="@+id/tv_tatletext"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="fill_parent" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/llay_tatile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/mtablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txt_while"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/top_red"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/top_red"
            app:tabTextColor="@color/black"
            >
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>