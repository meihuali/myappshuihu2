<?xml version="1.0" encoding="utf-8"?>
<com.example.xiao.myappshuihu.utils.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCheckGood"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_uncheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="0.4"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imge_ShoppingCart"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/huacha" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:text="@string/shangchengshuihu"
                    android:id="@+id/tv_named"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/txt_balck"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_jian"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/buliang_jianhao"
                        android:text="--"
                        android:textSize="30sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/tv_jian_liang"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/liangse_jianhao"
                        android:text="--"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shurukuang_one"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <TextView
                            android:textColor="@color/top_red"
                            android:id="@+id/et_shru"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:focusableInTouchMode="true"
                            android:gravity="center_horizontal"
                            android:hint="1"
                            Android:focusable="false" />
                    </LinearLayout>

                    <ImageView
                            android:id="@+id/tv_add"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/liangse_jiahao"
                        android:text="+"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:layout_marginTop="15dp"
                        android:text="Â¥" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:text="178"
                        android:textColor="@color/red"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_yanse"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:textColor="@color/txt_while"
                        android:background="@drawable/bg_tag_yuanquan"
                        android:layout_marginLeft="15dp"
                        android:text="@string/yanse"
                        android:layout_alignParentBottom="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/huise"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
    </LinearLayout>

    <Button
        android:text="@string/btn_addses"
        android:id="@+id/btn_addes"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <Button
        android:background="@color/top_red"
        android:text="@string/btn_deletes"
        android:id="@+id/btn_delete"
        android:layout_width="120dp"
        android:layout_height="match_parent" />
</com.example.xiao.myappshuihu.utils.SwipeMenuView>